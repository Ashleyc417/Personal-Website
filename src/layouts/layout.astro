---
import Navbar from "../components/navbar.astro";
import { ViewTransitions } from "astro:transitions";
const { title = "Welcome to my website! :)" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <ViewTransitions />
  </head>

  <body class="grid place-items-center pt-10 md:pt-5 bg-ashley-purple">
    <div class="pb-2">
      <Navbar />
    </div>
    <div class="px-3">
      <slot />
    </div>
  </body>
</html>
