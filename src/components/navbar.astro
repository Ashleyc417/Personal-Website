---
const pages: { [key: string]: string } = {
  "/": "Home",
  "/projects": "Projects",
  "/experience": "Experience",
  "/about": "About",
};
---

<header class="text-center">
  <a href="/">
    <h1 class="font-bold text-6xl md:text-4xl">Ashley Chan</h1>
  </a>

  <ul class="flex flex-wrap items-center space-x-8 py-7 text-lg">
    {
      Object.keys(pages).map((pg) => {
        if (Astro.url.pathname === pg) {
          return (
            <li>
              <a class="active font-semibold" href="#">
                {pages[pg]}
              </a>
            </li>
          );
        } else {
          return (
            <li>
              <a href={pg}>{pages[pg]}</a>
            </li>
          );
        }
      })
    }
  </ul>
</header>
